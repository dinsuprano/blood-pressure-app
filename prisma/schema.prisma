generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Record {
  id         Int      @id @default(autoincrement())
  systolic   Int
  diastolic  Int
  pulse      Int?     // new variable (optional)
  notes      String?
  person     Int      // 1 for User 1, 2 for User 2
  recordedAt DateTime // new variable (required)
  createdAt  DateTime @default(now())
}